<Window x:Class="ZooApp.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Add Employee"
        Height="480"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add New Employee"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">

               
                <TextBlock Text="Full Name:"/>
                <TextBox x:Name="NameBox" Height="28"/>
                <TextBlock x:Name="NameError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Required field"/>

                
                <TextBlock Text="Category:" Margin="0,10,0,0"/>
                <ComboBox x:Name="CategoryCombo" Height="28">
                    <ComboBoxItem Content="vet"/>
                    <ComboBoxItem Content="cleaner"/>
                    <ComboBoxItem Content="trainer"/>
                    <ComboBoxItem Content="builder"/>
                    <ComboBoxItem Content="admin"/>
                </ComboBox>
                <TextBlock x:Name="CategoryError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Required field"/>

                
                <TextBlock Text="Gender:" Margin="0,10,0,0"/>
                <ComboBox x:Name="GenderComboBox" Height="28">
                    <ComboBoxItem Content="male"/>
                    <ComboBoxItem Content="female"/>
                </ComboBox>
                <TextBlock x:Name="GenderError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Please select gender"/>

               
                <TextBlock Text="Birth Date:" Margin="0,10,0,0"/>
                <DatePicker x:Name="BirthDatePicker" SelectedDate="{x:Static sys:DateTime.Now}" Height="28"/>
                <TextBlock x:Name="BirthError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Select birth date"/>

                
                <TextBlock Text="Work Start Date:" Margin="0,10,0,0"/>
                <DatePicker x:Name="WorkStartDatePicker" Height="28"/>
                <TextBlock x:Name="WorkDateError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Select work start date"/>

               
                <TextBlock Text="Salary:" Margin="0,10,0,0"/>
                <TextBox x:Name="SalaryBox" Height="28"/>
                <TextBlock x:Name="SalaryError" Foreground="Red" FontSize="12"
                           Visibility="Collapsed" Text="⚠ Must be a positive number"/>

                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="💾 Save" Width="100" Margin="5" Click="Save_Click"/>
                    <Button Content="❌ Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
