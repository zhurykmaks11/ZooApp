<Window x:Class="ZooApp.Views.AddFeedingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Feeding Record" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Select Animal:" Margin="0,5"/>
            <ComboBox x:Name="AnimalComboBox" Margin="0,5" DisplayMemberPath="Name" SelectedValuePath="Id"/>

            <TextBlock Text="Feed Type:" Margin="0,5"/>
            <TextBox x:Name="FeedTypeBox" Margin="0,5"/>

            <TextBlock Text="Quantity (kg):" Margin="0,5"/>
            <TextBox x:Name="QuantityBox" Margin="0,5" 
                     PreviewTextInput="NumberOnly"
                     CommandManager.PreviewExecuted="QuantityBox_PreviewExecuted"/>

            <TextBlock Text="Feeding Time (HH:mm):" Margin="0,5"/>
            <TextBox x:Name="FeedingTimeBox" Margin="0,5"/>

            <TextBlock Text="Season:" Margin="0,5"/>
            <ComboBox x:Name="SeasonComboBox" Margin="0,5">
                <ComboBoxItem Content="зима"/>
                <ComboBoxItem Content="весна"/>
                <ComboBoxItem Content="літо"/>
                <ComboBoxItem Content="осінь"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="💾 Save" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="✖ Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>