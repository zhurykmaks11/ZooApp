<Window x:Class="ZooApp.Views.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supplier" Height="430" Width="380"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameBox" Margin="0,5"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="AddressBox" Margin="0,5"/>

            <TextBlock Text="Phone (+380...):"/>
            <TextBox x:Name="PhoneBox" Margin="0,5"/>

            <TextBlock Text="Feed Types (comma separated):"/>
            <TextBox x:Name="FeedBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="💾 Save" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="❌ Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>

</Window>