<Window x:Class="ZooApp.Views.AddSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Supplier" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Supplier Name:"/>
            <TextBox x:Name="NameBox" Margin="0,5"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="AddressBox" Margin="0,5"/>

            <TextBlock Text="Phone:"/>
            <TextBox x:Name="PhoneBox" Margin="0,5"/>

            <TextBlock Text="Feed Types (comma separated):"/>
            <TextBox x:Name="FeedBox" Margin="0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="SaveButton" Width="100" Margin="5" Content="Save" Click="Save_Click"/>
            <Button x:Name="CancelButton" Width="100" Margin="5" Content="Cancel" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>

</Window>