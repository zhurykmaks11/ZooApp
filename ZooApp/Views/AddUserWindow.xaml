<Window x:Class="ZooApp.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="👤 Add New User" FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Login:"/>
            <TextBox x:Name="LoginBox" Margin="0,5,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>

            <TextBlock Text="Role:"/>
            <ComboBox x:Name="RoleBox" Margin="0,5,0,20">
                <ComboBoxItem Content="admin"/>
                <ComboBoxItem Content="operator"/>
                <ComboBoxItem Content="authorized"/>
                <ComboBoxItem Content="guest"/>
            </ComboBox>

            <Button Content="Add User" Height="40" Background="LightGreen" Click="AddUser_Click"/>
        </StackPanel>
    </Grid>
</Window>