<Window x:Class="ZooApp.Views.AnimalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animals" Height="500" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>   
                <ColumnDefinition Width="Auto"/>   
                <ColumnDefinition Width="Auto"/>   
                <ColumnDefinition Width="220"/>    
                <ColumnDefinition Width="Auto"/>   
                <ColumnDefinition Width="Auto"/>   
            </Grid.ColumnDefinitions>

            <!-- Кнопки -->
            <Button Grid.Column="0" Content="➕ Add" Width="100" Height="32" Margin="5" Click="Add_Click"/>
            <Button Grid.Column="1" Content="✏️ Edit" Width="100" Height="32" Margin="5" Click="Edit_Click"/>
            <Button Grid.Column="2" Content="❌ Delete" Width="100" Height="32" Margin="5" Click="Delete_Click"/>
            
            <TextBox Grid.Column="3"
                     x:Name="SearchBox"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Margin="10,0"
                     Text="Search by name..."
                     Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>

            <Button Grid.Column="4" Content="🔍 Find" Width="90" Height="32" Margin="5" Click="Find_Click"/>
            <Button Grid.Column="5" Content="⬅ Back" Width="100" Height="32" Margin="5" Click="Back_Click"/>
        </Grid>
        
        <DataGrid x:Name="AnimalsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  RowHeight="30"
                  FontSize="14"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="140"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="140"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="100"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}" Width="140"/>
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="100"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="100"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Climate Zone" Binding="{Binding ClimateZone}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
