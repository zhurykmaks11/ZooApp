<Window x:Class="ZooApp.Views.AnimalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animals" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="⬅ Back" Width="100" Margin="5" Click="Back_Click"/>
            <Button Content="➕ Add" Width="100" Margin="5" Click="Add_Click"/>
            <Button Content="✏️ Edit" Width="100" Margin="5" Click="Edit_Click"/>
            <Button Content="❌ Delete" Width="100" Margin="5" Click="Delete_Click"/>

            <TextBox x:Name="SearchBox" Width="200" Margin="20,0,5,0" />
            <Button Content="🔍 Find" Width="80" Click="Find_Click"/>
        </StackPanel>

        <!-- Таблиця з тваринами -->
        <DataGrid x:Name="AnimalsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="100"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate}" Width="120"/>
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="80"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="80"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Climate Zone" Binding="{Binding ClimateZone}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
