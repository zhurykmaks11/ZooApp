<Window x:Class="ZooApp.Views.AnimalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animals"
        Height="520"
        Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Grid Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddButton"
                    Grid.Column="0"
                    Content="➕ Add"
                    Width="100" Height="32" Margin="5"
                    Click="Add_Click"/>

            <Button x:Name="EditButton"
                    Grid.Column="1"
                    Content="✏ Edit"
                    Width="100" Height="32" Margin="5"
                    Click="Edit_Click"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="2"
                    Content="❌ Delete"
                    Width="100" Height="32" Margin="5"
                    Click="Delete_Click"/>

            <TextBox x:Name="SearchBox"
                     Grid.Column="3"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Margin="10 0"
                     Text="Search by name..."
                     Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>

            <Button Grid.Column="4"
                    Content="🔍 Find"
                    Width="100" Height="32"
                    Margin="5"
                    Click="Find_Click"/>
            
            <Button x:Name="AssignEmployees"
                    Grid.Column="5"
                    Content="👤 Employees"
                    Width="120"
                    Height="32"
                    Margin="5"
                    Click="AssignEmployees_Click"/>


            <Button Grid.Column="6"
                    Content="⬅ Back"
                    Width="100" Height="32"
                    Margin="5"
                    Click="Back_Click"/>
        </Grid>

        
        <DataGrid x:Name="AnimalsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  RowHeight="28"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="150"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                <DataGridTextColumn Header="Birth" Binding="{Binding BirthDate}" Width="130"/>
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="80"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="80"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Climate" Binding="{Binding ClimateZone}" Width="120"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
