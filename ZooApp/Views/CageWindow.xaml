<Window x:Class="ZooApp.Views.CageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cages"
        Height="500"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Add Cage" Width="120" Margin="5" Click="AddCage_Click"/>
            <Button Content="🐾 Assign Animal" Width="140" Margin="5" Click="AssignAnimal_Click"/>
            <Button Content="🔄 Move Animal" Width="120" Margin="5" Click="MoveAnimal_Click"/>
            <Button Content="👁 View Animals" Width="130" Margin="5" Click="ViewAnimals_Click"/>
            <Button Content="✏️ Edit Cage" Width="120" Margin="5" Click="EditCage_Click"/>
            <Button Content="🗑 Delete Cage" Width="120" Margin="5" Click="DeleteCage_Click"/>

            <Button Content="⬅ Back" Width="100" Margin="5" Click="Back_Click"/>
            
        </StackPanel>


        <!-- Таблиця кліток -->
        <DataGrid x:Name="CagesGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  RowHeight="30"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="200"/>
                <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="120"/>
                <DataGridTextColumn Header="Heated" Binding="{Binding Heated}" Width="80"/>
                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="80"/>
                <DataGridTextColumn Header="Animals Count" Binding="{Binding AnimalCount}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>