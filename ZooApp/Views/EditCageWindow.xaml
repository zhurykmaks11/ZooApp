<Window x:Class="ZooApp.Views.EditCageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Cage" Height="400" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Edit Cage" FontSize="20" FontWeight="Bold" Margin="0 0 0 15" HorizontalAlignment="Center"/>

            <TextBlock Text="Location:"/>
            <TextBox x:Name="LocationBox"/>

            <TextBlock Text="Size:"/>
            <TextBox x:Name="SizeBox"/>

            <TextBlock Text="Capacity:"/>
            <TextBox x:Name="CapacityBox"/>

            <TextBlock Text="Compatible Species (comma):"/>
            <TextBox x:Name="SpeciesBox"/>

            <StackPanel Orientation="Horizontal" Margin="0 15 0 0" HorizontalAlignment="Center">
                <Button Content="💾 Save" Width="100" Margin="5" Click="Save_Click"/>
                <Button Content="❌ Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>