<Window x:Class="ZooApp.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Employee Information"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <!-- Full Name -->
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="NameBox" Height="28"/>

            <!-- Category -->
            <TextBlock Text="Category:" Margin="0,10,0,0"/>
            <ComboBox x:Name="CategoryCombo" Height="28">
                <ComboBoxItem Content="vet"/>
                <ComboBoxItem Content="cleaner"/>
                <ComboBoxItem Content="trainer"/>
                <ComboBoxItem Content="builder"/>
                <ComboBoxItem Content="admin"/>
            </ComboBox>

            <!-- Gender -->
            <TextBlock Text="Gender:" Margin="0,10,0,0"/>
            <ComboBox x:Name="GenderComboBox" Height="28">
                <ComboBoxItem Content="male"/>
                <ComboBoxItem Content="female"/>
            </ComboBox>

            <!-- Birth Date -->
            <TextBlock Text="Birth Date:" Margin="0,10,0,0"/>
            <DatePicker x:Name="BirthDatePicker" Height="28"/>

            <!-- Work Start -->
            <TextBlock Text="Work Start Date:" Margin="0,10,0,0"/>
            <DatePicker x:Name="WorkStartDatePicker" Height="28"/>

            <!-- Salary -->
            <TextBlock Text="Salary:" Margin="0,10,0,0"/>
            <TextBox x:Name="SalaryBox" Height="28"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="💾 Save" Width="100" Margin="5" Click="Save_Click"/>
                <Button Content="❌ Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
