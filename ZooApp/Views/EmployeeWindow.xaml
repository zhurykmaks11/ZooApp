<Window x:Class="ZooApp.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employees"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель керування -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="AddButton" Content="➕ Add Employee" Width="130" Height="32" Margin="5" Click="Add_Click"/>
            <Button x:Name="DeleteButton" Content="❌ Delete" Width="100" Height="32" Margin="5" Click="Delete_Click"/>
            <TextBox x:Name="SearchBox" Width="200" Height="32" Margin="10,0" Text="Search..." 
                     Foreground="Gray" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus"/>
            <Button Content="🔍 Find" Width="90" Height="32" Margin="5" Click="Find_Click"/>
            <Button Content="⬅ Back" Width="100" Height="32" Margin="5" Click="Back_Click"/>
        </StackPanel>

        <!-- Таблиця -->
        <DataGrid x:Name="EmployeeGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  HeadersVisibility="Column"
                  RowHeight="28">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Role}" Width="130"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="100"/>
                <DataGridTextColumn Header="Birth Date" Binding="{Binding BirthDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Salary" Binding="{Binding Salary}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
