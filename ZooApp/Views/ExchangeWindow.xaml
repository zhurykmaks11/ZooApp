<Window x:Class="ZooApp.Views.ExchangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Exchanges"
        Height="520"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="200"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
            </Grid.ColumnDefinitions>

            <Button x:Name="AddButton"
                    Grid.Column="0"
                    Content="➕ Add"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="Add_Click"/>

            <Button x:Name="EditButton"
                    Grid.Column="1"
                    Content="✏ Edit"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="Edit_Click"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="2"
                    Content="❌ Delete"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="Delete_Click"/>

            <TextBox Grid.Column="3" 
                     x:Name="SearchBox"
                     Height="32"
                     Margin="10 0"
                     Text="Search..."
                     Foreground="Gray"
                     GotFocus="Search_GotFocus"
                     LostFocus="Search_LostFocus"/>

            <Button Grid.Column="4" Content="🔍 Find" Width="100" Height="32" Margin="5" Click="Find_Click"/>
            
            <Button Grid.Column="5"
                    Content="🌍 Partners"
                    Width="120"
                    Height="32"
                    Margin="5"
                    Click="Partners_Click"/>

            <Button Grid.Column="6" Content="⬅ Back" Width="100" Height="32" Margin="5" Click="Back_Click"/>

        </Grid>
        
        <DataGrid x:Name="ExchangeGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  FontSize="14">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Animal" Binding="{Binding AnimalName}" Width="200"/>
                <DataGridTextColumn Header="Date" Binding="{Binding ExchangeDate}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding ExchangeType}" Width="120"/>
                <DataGridTextColumn Header="Other Zoo" Binding="{Binding OtherZoo}" Width="200"/>
                <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="300"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
