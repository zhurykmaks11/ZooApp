<Window x:Class="ZooApp.Views.FeedFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Animals" Height="260" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Feed Type:"/>
            <TextBox x:Name="FeedBox" Margin="0,5"/>

            <TextBlock Text="Season:" Margin="10,10,0,0"/>
            <ComboBox x:Name="SeasonBox" Margin="0,5">
                <ComboBoxItem Content="winter"/>
                <ComboBoxItem Content="spring"/>
                <ComboBoxItem Content="summary"/>
                <ComboBoxItem Content="autumn"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Search" Width="100" Margin="5" Click="Search_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>