<Window x:Class="ZooApp.Views.FeedingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feeding Schedule" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Add" Width="100" Margin="5" Click="Add_Click"/>
            <Button Content="✏️ Edit" Width="100" Margin="5" Click="Edit_Click"/>
            <Button Content="❌ Delete" Width="100" Margin="5" Click="Delete_Click"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="20,0,5,0" />
            <Button Content="🔍 Find" Width="80" Click="Find_Click"/>
            <Button Content="⬅ Back" Width="100" Margin="20,0,0,0" Click="Back_Click"/>
        </StackPanel>

        <DataGrid x:Name="FeedingGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Animal" Binding="{Binding AnimalName}" Width="120"/>
                <DataGridTextColumn Header="Feed Type" Binding="{Binding FeedType}" Width="120"/>
                <DataGridTextColumn Header="Quantity (kg)" Binding="{Binding QuantityKg}" Width="120"/>
                <DataGridTextColumn Header="Feeding Time" Binding="{Binding FeedingTime}" Width="120"/>
                <DataGridTextColumn Header="Season" Binding="{Binding Season}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>