<Window x:Class="ZooApp.Views.FeedingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feeding Schedule" Height="500" Width="1250"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель кнопок -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddButton" Grid.Column="0" Content="➕ Add" Width="100" Height="32" Margin="5" Click="Add_Click"/>
            <Button x:Name="EditButton" Grid.Column="1" Content="✏️ Edit" Width="100" Height="32" Margin="5" Click="Edit_Click"/>
            <Button x:Name="DeleteButton" Grid.Column="2" Content="❌ Delete" Width="100" Height="32" Margin="5" Click="Delete_Click"/>

            <TextBox Grid.Column="3"
                     x:Name="SearchBox"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Margin="10,0"
                     Text="Search..."
                     Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>

            <Button Grid.Column="4" Content="🔍 Find" Width="90" Height="32" Margin="5" Click="Find_Click"/>
            <Button Grid.Column="5" Content="📊 Feed Stats" Width="110" Height="32" Margin="5" Click="Stats_Click"/>
            <Button Grid.Column="6" Content="🧹 Clean" Width="100" Height="32" Margin="5" Click="Clean_Click"/>
            <Button Grid.Column="7" Content="📋 Summry" Width="110" Height="32" Margin="5" Click="Summary_Click"/>
            <Button Grid.Column="8" Content="🦁 Filter Animals" Width="150" Height="32" Margin="5" Click="FilterAnimals_Click"/>
            <Button Grid.Column="9" Content="⬅ Back" Width="100" Height="32" Margin="5" Click="Back_Click"/>
            

        </Grid>

        <!-- Таблиця з даними -->
        <DataGrid x:Name="FeedingGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  RowHeight="30"
                  FontSize="14"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Animal" Binding="{Binding AnimalName}" Width="150"/>
                <DataGridTextColumn Header="Feed Type" Binding="{Binding FeedType}" Width="150"/>
                <DataGridTextColumn Header="Quantity (kg)" Binding="{Binding QuantityKg}" Width="130"/>
                <DataGridTextColumn Header="Feeding Time" Binding="{Binding FeedingTime}" Width="130"/>
                <DataGridTextColumn Header="Season" Binding="{Binding Season}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
