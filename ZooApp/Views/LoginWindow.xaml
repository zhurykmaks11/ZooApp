<Window x:Class="ZooApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="ZooApp Login" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Login:"/>
            <TextBox x:Name="LoginBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,5,0,20"/>
            
            <Button Content="Forgot password?"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Foreground="Blue"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ForgotPassword_Click"/>

            <Button Content="Login" Height="35" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>