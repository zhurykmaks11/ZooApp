<Window x:Class="ZooApp.Views.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Logs" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="⬅ Back"
                Width="120" Height="35"
                Margin="0 0 0 10"
                Click="Back_Click"/>

        <DataGrid x:Name="LogsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="200"/>
                <DataGridTextColumn Header="User" Binding="{Binding User}" Width="150"/>
                <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="200"/>
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Window>