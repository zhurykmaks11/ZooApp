<Window x:Class="ZooApp.Views.MedicalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Records"
        Height="500"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="200"/>  
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="Auto"/> 
            </Grid.ColumnDefinitions>

            <Button x:Name="AddRecordButton"
                    Grid.Column="0"
                    Content="➕ Add Record"
                    Width="120"
                    Height="32"
                    Margin="5"
                    Click="AddRecord_Click"/>

            <Button x:Name="AddCheckupButton"
                    Grid.Column="1"
                    Content="💉 Add Checkup"
                    Width="120"
                    Height="32"
                    Margin="5"
                    Click="AddCheckup_Click"/>

            <Button x:Name="EditCheckupButton"
                    Grid.Column="2"
                    Content="✏️ Edit"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="EditCheckup_Click"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="3"
                    Content="❌ Delete"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="Delete_Click"/>

            <TextBox Grid.Column="4"
                     x:Name="SearchBox"
                     Height="32"
                     VerticalContentAlignment="Center"
                     Margin="10,0"
                     Text="Search..."
                     Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>

            <Button Grid.Column="5"
                    Content="🔍 Find"
                    Width="90"
                    Height="32"
                    Margin="5"
                    Click="Find_Click"/>
            
            <Button x:Name="HistoryButton"
                    Grid.Column="6"
                    Content="📜 History"
                    Width="100" Height="32"
                    Margin="5"
                    Click="History_Click"/>


            <Button Grid.Column="7"
                    Content="📊 Stats"
                    Width="90"
                    Height="32"
                    Margin="5"
                    Click="Stats_Click"/>

            <Button Grid.Column="8"
                    Content="⬅ Back"
                    Width="100"
                    Height="32"
                    Margin="5"
                    Click="Back_Click"/>
        </Grid>
        
        <DataGrid x:Name="MedicalGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="All"
                  RowHeight="30"
                  FontSize="14"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Animal" Binding="{Binding AnimalName}" Width="150"/>
                <DataGridTextColumn Header="Last Checkup" Binding="{Binding LastCheckupDate}" Width="150"/>
                <DataGridTextColumn Header="Weight" Binding="{Binding Weight}" Width="100"/>
                <DataGridTextColumn Header="Height" Binding="{Binding Height}" Width="100"/>
                <DataGridTextColumn Header="Vaccinations" Binding="{Binding Vaccinations}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
