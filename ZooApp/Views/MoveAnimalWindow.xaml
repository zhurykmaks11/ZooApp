<Window x:Class="ZooApp.Views.MoveAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Move Animal"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Move Animal to Another Cage"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0 0 0 10"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Animal:"/>
            <ComboBox x:Name="AnimalBox" Height="28"/>

            <TextBlock Text="New Cage:" Margin="0,10,0,0"/>
            <ComboBox x:Name="CageBox" Height="28"/>

            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="📦 Move" Width="120" Margin="5" Click="Move_Click"/>
                <Button Content="❌ Cancel" Width="120" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>