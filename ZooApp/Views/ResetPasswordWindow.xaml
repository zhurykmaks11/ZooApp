<Window x:Class="ZooApp.Views.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Login:"/>
            <TextBox x:Name="LoginBox" Margin="0,5"/>

            <TextBlock Text="New Password:" Margin="0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,5"/>

            <Button Content="Reset"
                    Height="35"
                    Margin="0,15,0,0"
                    Click="Reset_Click"/>

        </StackPanel>
    </Grid>
</Window>