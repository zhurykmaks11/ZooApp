<Window x:Class="ZooApp.Views.SupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suppliers" Height="500" Width="900">
        
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

            <Button x:Name="AddButton"
                    Width="110" Margin="5"
                    Content="Add"
                    Click="Add_Click"/>

            <Button x:Name="EditButton"
                    Width="110" Margin="5"
                    Content="Edit"
                    Click="Edit_Click"/>

            <Button x:Name="DeleteButton"
                    Width="110" Margin="5"
                    Content="Delete"
                    Click="Delete_Click"/>

            <TextBox x:Name="SearchBox"
                     Width="200"
                     Margin="10 0"
                     Text="Search..."/>

            <Button Width="110" Margin="5"
                    Content="Find"
                    Click="Find_Click"/>

            <Button Width="110" Margin="5"
                    Content="Back"
                    Click="Back_Click"/>

        </StackPanel>
        
        <DataGrid x:Name="SuppliersGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*"/>
                
                <DataGridTextColumn Header="Address"
                                    Binding="{Binding Address}"
                                    Width="*"/>

                <DataGridTextColumn Header="Phone"
                                    Binding="{Binding Phone}"
                                    Width="150"/>

                <DataGridTextColumn Header="Feed Types"
                                    Binding="{Binding FeedTypesString}"
                                    Width="200"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
