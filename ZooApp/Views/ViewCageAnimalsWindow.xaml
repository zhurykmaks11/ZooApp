<Window x:Class="ZooApp.Views.ViewCageAnimalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animals in Cage" Height="300" Width="600" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <DataGrid x:Name="AnimalsGrid"
                  DisplayMemberPath="DisplayName"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Species" Binding="{Binding Species}" Width="200"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>