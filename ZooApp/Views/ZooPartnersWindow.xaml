<Window x:Class="ZooApp.Views.ZooPartnersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zoo Partners"
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SpeciesBox"
                     Width="200"
                     Height="28"
                     Margin="0 0 10 0"
                     Text="Filter by species..."
                     Foreground="Gray"
                     GotFocus="SpeciesBox_GotFocus"
                     LostFocus="SpeciesBox_LostFocus"/>

            <Button Content="Search" Width="80" Click="Search_Click"/>
        </StackPanel>

        <ListBox x:Name="ZooList" Grid.Row="1" FontSize="14"/>
    </Grid>
</Window>